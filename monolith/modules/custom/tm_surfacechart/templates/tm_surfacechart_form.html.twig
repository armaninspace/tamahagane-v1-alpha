<form class="sections_forms" id="surface_chart_form" method="post" style="display: block;">
  <h3>Surface Chart</h3>
  <div class="form-inner">
	<div class="form-group">
	  <label for="surface_title" class="control-label">Title:<span class="form-required" title="This field is required."></span></label>
	  <input type="text" class="form-control" id="surface_title" name="surface_title" required="" pattern=".*\S+.*">
	</div>
	<div class="form-group">
	  <label for="surface_xaxis_col" class="control-label">Select x-axis column:<span class="form-required" title="This field is required."></span></label>
	  <select class="form-control singleselect" id="surface_xaxis_col" name="surface_xaxis_col" required="">
		<option data-type="" value="">--- Select Column ----</option>
		{% for data in num_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	</div>
	<div class="form-group">
	  <label for="surface_yaxis_col" class="control-label">Select y-axis column:<span class="form-required" title="This field is required."></span></label>
	  <select class="form-control singleselect" id="surface_yaxis_col" name="surface_yaxis_col" required="">
		<option data-type="" value="">--- Select Column ----</option>
		{% for data in num_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	</div>
	<div class="form-group">
	  <label for="surface_xtitle" class="control-label">X-axis title:</label>
	  <input type="text"  class="form-control" id="surface_xtitle" name="surface_xtitle">
	</div>
	<div class="form-group">
	  <label for="surface_ytitle" class="control-label">Y-axis title:</label>
	  <input type="text" class="form-control" id="surface_ytitle" name="surface_ytitle">
	</div>
	<div class="form-group filter-div">
	  <label for="" class="control-label filters">Filters:</label>
	  <div class="filter_note"><span class="form-required"></span>Character filters are case sensitive for "is equal to" operator.</div>
	</div>
	<input type="hidden" name="surface_filter_count" id="surface_filter_count" value="1">
	<input type="hidden" name="csv_file_path" id="csvFilePath" value="{{ file_path }}">
	<input type="hidden" name="img_dir" id="imgDir" value="{{ img_dir }}">
	<input type="hidden" id="module_path_surface" name="module_path_surface" value="{{ module_path }}">
	<div id="surface_filter1" class="form-group form-inline filterDiv first">
	  <select class="form-control filterColoumSel filter-sel" id="surface_filter_sel1" name="surface_filter_sel1">
		<option data-type="" value="">--- Select Filter ----</option>
		{% for data in merged_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	  <select class="form-control filter-oper" id="surface_filter_cond_sel1" name="surface_filter_cond_sel1">
        <option value="">--Select Operator--</option>
	  </select>
	  <input type="text" class="form-control filter-val" id="surface_filter_cond_val1" name="surface_filter_cond_val1" placeholder="Value">
	</div>
	<div class="form-group add-more-cont">
      <a id="surface_addb" class="add-more" name="surface_addmore" type="">Add Condition</a>
	</div>
    
  </div> <!--end form-inner-->
  <div class="form-group form-btns">
	<input type="submit" class="btn btn-default submit-btn" name="surface_chart_sub" value="Submit" id="surface_chart_sub">
	  <button type="button" class="btn btn-default cancel_btn">Cancel</button>
    <img class="classifier-modify" src="/sites/default/files/graphloader.gif">
  </div>
  <input id="sufacechartfile" type="hidden" name="sufacechartfile" value="">
</form>
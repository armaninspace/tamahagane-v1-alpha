<form class="sections_forms" id="bar_form" method="post" style="display: block;">
  <h3>Bar Chart</h3>
  <div class="form-inner">
	<div class="form-group">
	  <label for="bar_title" class="control-label">Title:<span class="form-required" title="This field is required."></span></label>
	  <input type="text" class="form-control" id="bar_title" name="bar_title" required pattern="[a-zA-Z0-9]+[a-zA-Z0-9 ]+">
	</div>
	<div class="form-group">
	  <label for="bar_xaxis_col" class="control-label">Select column:<span class="form-required" title="This field is required."></span></label>
	  <select class="form-control singleselect" id="bar_xaxis_col" name="bar_xaxis_col" required >
		<option data-type="" value="">--- Select Column ----</option>
		{% for data in all_types %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	</div>
	<div class="form-group">
	  <label for="bar_xtitle" class="control-label">X-axis title:</label>
	  <input type="text" class="form-control" id="bar_xtitle" name="bar_xtitle">
	</div>
    <div class="form-group filter-div">
	  <label for="" class="control-label filters">Filters:</label>
	  <div class="filter_note"><span class="form-required"></span>Character filters are case sensitive for "is equal to" operator.</div>
	</div>
	<input type="hidden" name="bar_filter_count" id="bar_filter_count" value="1" />
	<input type="hidden" name="csv_file_path" id="csvFilePath" value="{{ file_path }}">
	<input type="hidden" name="img_dir" id="imgDir" value="{{ img_dir }}">
	<input type="hidden" id="module_path_line" name="module_path_line" value="{{ module_path }}">
	<div id="bar_filter1" class="form-group form-inline filterDiv">
	  <select class="form-control filterColoumSel" id="bar_filter_sel1" name="bar_filter_sel1">
		<option data-type="" value="">--- Select Filter ----</option>
		{% for data in merged_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	  <select class="form-control" id="bar_filter_cond_sel1" name="bar_filter_cond_sel1">
        <option value="">--Select Operator--</option>
	  </select>
	  <input type="text" class="form-control" id="bar_filter_cond_val1" name="bar_filter_cond_val1" placeholder="Value">
	</div>
	<div class="form-group  add-more-cont">
	  <a id="bar_addb" class="add-more" name="bar_addmore" type="">Add Condition</a>
	</div>
  </div><!-- end form-inner-->
  <div class="form-group form-btns">
	<button type="button" class="btn btn-default cancel_btn">Cancel</button>
	<input type="submit" class="btn btn-primary submit-btn" name="bar_sub" value="Submit" id="bar_sub" >
  </div>
</form>
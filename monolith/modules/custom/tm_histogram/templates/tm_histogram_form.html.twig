<form class="sections_forms" id="histogram_form" method="post" style="display: block;">
  <h3>Histogram</h3>
  <div class="form-inner">
	<div class="form-group">
	  <label for="histo_title" class="control-label">Title:<span class="form-required" title="This field is required."></span></label>
	  <input type="text" class="form-control" id="histo_title" name="histo_title" required="" pattern=".*\S+.*">
	</div>
	<div class="form-group">
	  <label for="histogram_xaxis_col" class="control-label">Select x-axis column(s):<span class="form-required" title="This field is required."></span></label>
	  <select class="selectpicker multiselect" id="histo_xaxis_col" name="histo_xaxis_col" multiple required >
		{% for data in num_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
      </select>
	</div>
    <div class="form-group">
	  <label for="histo_xtitle" class="control-label">X-axis title:</label>
	  <input type="text" class="form-control" id="histo_xtitle" name="histo_xtitle">
	</div>
    <div class="form-group filter-div">
	  <label for="" class="control-label filters">Filters:</label>
	  <div class="filter_note"><span class="form-required"></span>Character filters are case sensitive for "is equal to" operator.</div>
    </div>
	<input type="hidden" name="histo_filter_count" id="histo_filter_count" value="1">
	<input type="hidden" name="csv_file_path" id="csvFilePath" value="{{ file_path }}">
	<input type="hidden" name="img_dir" id="imgDir" value="{{ img_dir }}">
	<input type="hidden" id="module_path_histo" name="module_path_histo" value="{{ module_path }}">
	<div id="histo_filter1" class="form-group form-inline filterDiv first">
	  <select class="form-control filterColoumSel filter-sel" id="histo_filter_sel1" name="histo_filter_sel1">
		<option value="">--Select Column--</option>
		{% for data in merged_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	  <select class="form-control filter-oper" id="histo_filter_cond_sel1" name="histo_filter_cond_sel1">
		 <option value="">--Select Operator--</option>
	  </select>
	  <input type="text" class="form-control filter-val" id="histo_filter_cond_val1" name="histo_filter_cond_val1" placeholder="Value">
	</div>
	<div class="form-group add-more-cont">
	  <a id="histo_addb" class="add-more" name="histo_addmore" type="">Add Condition</a>
	</div> 
  </div><!--end form-inner--> 
  <div class="form-group form-btns">
		<input type="submit" class="btn btn-default submit-btn" name="histo_chart_sub" value="Submit" id="histo_chart_sub">
	  <button type="button" class="btn btn-default cancel_btn">Cancel</button>
	  <img class="classifier-modify" src="/sites/default/files/graphloader.gif">
  </div>
  <input id="histochartfile" type="hidden" name="histochartfile" value="">
</form>
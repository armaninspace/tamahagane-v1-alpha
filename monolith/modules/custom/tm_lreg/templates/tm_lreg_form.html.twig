<form class="sections_forms" id="lreg_chart_form" method="post" style="display: block;">
  <h3>Linear Regression</h3>
  <div class="form-inner">
    <div class="form-group">
      <label for="lreg_title" class="control-label">Title:<span class="form-required" title="This field is required."></span></label>
      <input type="text" class="form-control" id="lreg_title" name="lreg_title" required="" pattern=".*\S+.*">
    </div>
    <div class="form-group">
    <label for="lregchart_predictors_col" class="control-label">Select Predictors:<span class="form-required" title="This field is required."></span></label>
      <select class="selectpicker multiselect" id="lreg_predictors_col" name="lreg_predictors_col" multiple required >
        {% for data in num_fields %}
          {% set foo = data|split('=') %}
          <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="form-group">
      <label for="lreg_outcome_col" class="control-label">Select Outcome:<span class="form-required"
							  title="This field is required."></span></label>
      <select class="form-control outcome-sel" id="lreg_outcome_col" name="lreg_outcome_col" required>
        {#all_types.factor_type#}
        <option data-type="" value="">--- Select Column ----</option>
        {% for data in num_fields %}
          {% set foo = data|split('=') %}
          <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
        {% endfor %}
      </select>
    </div>
    <div class="form-group filter-div">
      <label for="" class="control-label filters">Filters:</label>
      <div class="filter_note"><span class="form-required"></span>Character filters are case sensitive for "is equal to" operator.</div>
    </div>
    <input type="hidden" name="lreg_filter_count" id="lreg_filter_count" value="1">
    <input type="hidden" name="csv_file_path" id="csvFilePath" value="{{ file_path }}">
    <input type="hidden" name="img_dir" id="imgDir" value="{{ img_dir }}">
    <input type="hidden" id="module_path_lreg" name="module_path_lreg" value="{{ module_path }}">
    <div id="lreg_filter1" class="form-group form-inline filterDiv first">
      <select class="form-control filterColoumSel filter-sel" id="lreg_filter_sel1" name="lreg_filter_sel1">
        <option value="">--Select Column--</option>
        {% for data in merged_fields %}
          {% set foo = data|split('=') %}
          <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
        {% endfor %}
      </select>
      <select class="form-control filter-oper" id="lreg_filter_cond_sel1" name="lreg_filter_cond_sel1">
        <option value="">--Select Operator--</option>
      </select>
      <input type="text" class="form-control filter-val" id="lreg_filter_cond_val1" name="lreg_filter_cond_val1" placeholder="Value">
    </div>
    <div class="form-group add-more-cont">
      <a id="lreg_addb" class="add-more" name="lreg_addmore" type="">Add Condition</a>
    </div>
  </div><!--end form-inner-->
  <div class="form-group form-btns">
    <button type="button" class="btn btn-default cancel_btn">Cancel</button>
    <input type="submit" class="btn btn-default submit-btn" name="lreg_chart_sub" value="Submit" id="lreg_chart_sub">
  </div>
</form>

<form class="sections_forms" id="rankingplot_form" method="post" style="display: block;">
  <h3>Ranking Plot</h3>
  <div class="form-inner">
	<div class="form-group">
	  <label for="rankingplot_title" class="control-label">Title:<span
				  class="form-required" title="This field is required."></span></label>
	  <input type="text" class="form-control" id="rankingplot_title"
			 name="rankingplot_title" required pattern=".*\S+.*">
	</div>
	<div class="form-group">
	  <label for="rankingplot_xaxis_col" class="control-label">Select
		  x-axis column:<span class="form-required"
							  title="This field is required."></span></label>
	  <select class="form-control singleselect"
			  id="rankingplot_xaxis_col" name="rankingplot_xaxis_col"
			  required>
		<!--<option value="" data-type="">--Select Column--</option>
-->
		<option data-type="" value="">--- Select Column ----</option>
		{% for data in all_types %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	</div>
	<div class="form-group">
	  <label for="rankingplot_xtitle" class="control-label">X-axis
		  title:</label>
	  <input type="text" class="form-control" id="rankingplot_xtitle"
			 name="rankingplot_xtitle">
	</div>
	<div class="form-group filter-div">
	  <label for="" class="control-label filters">Filters:</label>
	  <div class="filter_note"><span class="form-required"></span>Character filters are case sensitive for "is equal to" operator.</div>
	</div>
	<input type="hidden" name="rankingplot_filter_count" id="rankingplot_filter_count" value="1"/>
	<input type="hidden" name="csv_file_path" id="csvFilePath" value="{{ file_path }}">
	<input type="hidden" name="img_dir" id="imgDir" value="{{ img_dir }}">
	<input type="hidden" id="module_path_rankingplot" name="module_path_rankingplot" value="{{ module_path }}">
	<div id="rankingplot_filter1" class="form-group form-inline filterDiv">
	  <select class="form-control filterColoumSel" id="rankingplot_filter_sel1" name="rankingplot_filter_sel1">
		<option data-type="" value="">--- Select Filter ----</option>
		{% for data in merged_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	  <select class="form-control" id="rankingplot_filter_cond_sel1" name="rankingplot_filter_cond_sel1">
	    <option value="">--Select Operator--</option>
	  </select>
	  <input type="text" class="form-control" id="rankingplot_filter_cond_val1" name="rankingplot_filter_cond_val1" placeholder="Value">
	</div>
	<div class="form-group  add-more-cont">
      <a id="rankingplot_addb" class="add-more" name="rankingplot_addmore" type="">Add Condition</a>
	</div>
  </div><!-- end form-inner-->
  <div class="form-group form-btns">
	<button type="button" class="btn btn-default cancel_btn">Cancel</button>
	<input type="submit" class="btn btn-primary submit-btn" name="rankingplot_sub" value="Submit" id="rankingplot_sub" >
  </div>
</form>
<form class="sections_forms" id="cross_tabs_form" method="post" style="display: block;">
  <!--<h3>Cross Tabs</h3>-->
  <div class="form-inner">
	<div class="form-group">
	  <label for="cross_title" class="control-label">Title:<span class="form-required" title="This field is required."></span></label>
	  <input type="text" class="form-control" id="cross_title" name="cross_title" required pattern="[a-zA-Z0-9]+[a-zA-Z0-9 ]+">
	</div>
	<div class="form-group">
	  <label for="cross_xaxis_col" class="control-label">Select x-axis column:<span class="form-required" title="This field is required."></span></label>
	  <select class="form-control singleselect" id="cross_xaxis_col" name="cross_xaxis_col" required >
		<option data-type="" value="">--- Select Column ----</option>
		{% for data in num_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	</div>
	<div class="form-group">
	  <label for="cross_yaxis_col" class="control-label">Select y-axis column:<span class="form-required" title="This field is required."></span></label>
	  <select class="form-control singleselect" id="cross_yaxis_col" name="cross_yaxis_col" required >
		<option data-type="" value="">--- Select Column ----</option>
		{% for data in num_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	</div>
    <div class="form-group filter-div">
	  <label for="" class="control-label filters">Filters:</label>
	  <div class="filter_note"><span class="form-required"></span>Character filters are case sensitive for "is equal to" operator.</div>
	</div>
	<input type="hidden" name="cross_filter_count" id="cross_filter_count" value="1" />
	<input type="hidden" name="csv_file_path" id="csvFilePath" value="{{ file_path }}">
	<input type="hidden" name="img_dir" id="imgDir" value="{{ img_dir }}">
	<input type="hidden" id="module_path_line" name="module_path_line" value="{{ module_path }}">
    <div id="cross_filter1" class="form-group form-inline filterDiv first">
	  <select class="form-control filterColoumSel" id="cross_filter_sel1" name="cross_filter_sel1">
		<option data-type="" value="">--- Select Filter ----</option>
		{% for data in merged_fields %}
		  {% set foo = data|split('=') %}
		  <option data-type="{{ foo[1] }}" value="{{ foo[0] }}">{{ foo[0] }}</option>
		{% endfor %}
	  </select>
	  <select class="form-control" id="cross_filter_cond_sel1" name="cross_filter_cond_sel1">
		<option value="">--Select Operator--</option>
	  </select>
	  <input type="text" class="form-control" id="cross_filter_cond_val1" name="cross_filter_cond_val1" placeholder="Value">
	</div>
	<div class="form-group  add-more-cont">
      <a id="cross_addb" class="add-more" name="cross_addmore" type="">Add Condition</a>
	</div>
  </div><!-- end form-inner-->
  <div class="form-group form-btns">
	<input type="submit" class="btn btn-primary submit-btn" name="cross_plot_sub" value="Submit" id="cross_plot_sub" >
    <img class="classifier-modify" src="/sites/default/files/graphloader.gif">
  </div>
  <input id="crosstabsfile" type="hidden" name="crosstabsfile" value="">
</form>